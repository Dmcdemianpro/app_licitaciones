model Adjudicacion {
  id                    String      @id @default(cuid()) @db.NVarChar(100)
  licitacionId          String      @unique @map("licitacion_id") @db.NVarChar(100)

  // Información de la adjudicación
  numeroAdjudicacion    String?     @map("numero_adjudicacion") @db.NVarChar(50)
  tipoAdjudicacion      Int?        @map("tipo_adjudicacion")
  cantidadOferentes     Int?        @map("cantidad_oferentes")
  fechaAdjudicacion     DateTime?   @map("fecha_adjudicacion")

  // Información del proveedor ganador
  proveedorRut          String?     @map("proveedor_rut") @db.NVarChar(50)
  proveedorNombre       String?     @map("proveedor_nombre") @db.NVarChar(500)
  montoAdjudicado       Decimal?    @map("monto_adjudicado") @db.Decimal(18, 2)

  // Información adicional
  observaciones         String?     @db.NVarChar(MAX)
  estadoAdjudicacion    String?     @map("estado_adjudicacion") @db.NVarChar(50)

  // Metadata
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt

  licitacion Licitacion @relation(fields: [licitacionId], references: [id], onDelete: Cascade)

  @@map("adjudicaciones")
  @@index([licitacionId], map: "idx_adjudicacion_licitacion")
  @@index([proveedorRut], map: "idx_adjudicacion_proveedor")
  @@index([fechaAdjudicacion], map: "idx_adjudicacion_fecha")
}

model SoporteTecnico {
  id                    String    @id @default(cuid()) @db.NVarChar(100)
  licitacionId          String?   @map("licitacion_id") @db.NVarChar(100)
  ticketId              String?   @map("ticket_id") @db.NVarChar(100)
  citaId                String?   @map("cita_id") @db.NVarChar(100)

  // Información del contacto
  nombreContacto        String    @map("nombre_contacto") @db.NVarChar(255)
  cargoContacto         String?   @map("cargo_contacto") @db.NVarChar(255)
  emailContacto         String?   @map("email_contacto") @db.NVarChar(255)
  telefonoContacto      String?   @map("telefono_contacto") @db.NVarChar(50)
  empresaContacto       String?   @map("empresa_contacto") @db.NVarChar(255)

  // Información del soporte
  tipoSoporte           String    @map("tipo_soporte") @db.NVarChar(100) // TECNICO, COMERCIAL, ADMINISTRATIVO, LEGAL, OTRO
  descripcion           String?   @db.NVarChar(MAX)
  observaciones         String?   @db.NVarChar(MAX)
  estado                String    @default("ACTIVO") @db.NVarChar(50) // ACTIVO, INACTIVO, ARCHIVADO
  prioridad             String    @default("MEDIA") @db.NVarChar(50) // ALTA, MEDIA, BAJA

  // Información de seguimiento
  fechaContacto         DateTime? @map("fecha_contacto")
  proximoSeguimiento    DateTime? @map("proximo_seguimiento")

  // Horarios de atención
  horarioInicio         String?   @map("horario_inicio") @db.NVarChar(10)        // Formato: "09:00"
  horarioFin            String?   @map("horario_fin") @db.NVarChar(10)           // Formato: "18:00"
  diasDisponibles       String?   @map("dias_disponibles") @db.NVarChar(100)     // Ejemplo: "Lunes a Viernes"
  zonaHoraria           String?   @map("zona_horaria") @db.NVarChar(50) @default("America/Santiago")
  observacionesHorario  String?   @map("observaciones_horario") @db.NVarChar(MAX)

  // Metadata
  createdById           String    @map("created_by_id") @db.NVarChar(100)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  licitacion Licitacion? @relation(fields: [licitacionId], references: [id], onDelete: Cascade)
  ticket     Ticket?     @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  cita       Cita?       @relation(fields: [citaId], references: [id], onDelete: Cascade)

  @@map("soporte_tecnico")
  @@index([licitacionId], map: "idx_soporte_licitacion")
  @@index([ticketId], map: "idx_soporte_ticket")
  @@index([citaId], map: "idx_soporte_cita")
  @@index([estado], map: "idx_soporte_estado")
  @@index([tipoSoporte], map: "idx_soporte_tipo")
}

// Modelo para eventos/trazabilidad de licitaciones
model EventoLicitacion {
  id              String    @id @default(cuid()) @db.NVarChar(100)
  licitacionId    String    @map("licitacion_id") @db.NVarChar(100)

  // Tipo de evento
  tipoEvento      String    @map("tipo_evento") @db.NVarChar(100)
  // Tipos: CREACION, ACTUALIZACION, CAMBIO_ESTADO, INCIDENTE, CAIDA_SISTEMA,
  //        MANTENIMIENTO, VISITA_TECNICA, REUNION, DOCUMENTO_AGREGADO,
  //        ADJUDICACION, CIERRE, EXTENSION_PLAZO, NOTA, OTRO

  // Información del evento
  titulo          String    @db.NVarChar(255)
  descripcion     String?   @db.NVarChar(MAX)
  importancia     String    @default("MEDIA") @db.NVarChar(50) // CRITICA, ALTA, MEDIA, BAJA, INFO

  // Fechas
  fechaEvento     DateTime  @map("fecha_evento")
  fechaResolucion DateTime? @map("fecha_resolucion") // Para incidentes/problemas

  // Referencia opcional a ticket (cuando el evento está vinculado a un ticket)
  ticketId        String?   @map("ticket_id") @db.NVarChar(100)

  // Datos adicionales (JSON para flexibilidad)
  metadatos       String?   @db.NVarChar(MAX) // JSON con datos adicionales según tipo

  // Estado del evento (para eventos que requieren seguimiento)
  estado          String    @default("REGISTRADO") @db.NVarChar(50) // REGISTRADO, EN_PROGRESO, RESUELTO, CERRADO

  // Auditoría
  creadoPorId     String    @map("creado_por_id") @db.NVarChar(100)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relaciones
  licitacion      Licitacion @relation(fields: [licitacionId], references: [id], onDelete: Cascade)
  ticket          Ticket?    @relation(fields: [ticketId], references: [id], onDelete: SetNull)
  creadoPor       User       @relation("EventoCreatedBy", fields: [creadoPorId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("eventos_licitacion")
  @@index([licitacionId], map: "idx_evento_licitacion")
  @@index([ticketId], map: "idx_evento_ticket")
  @@index([tipoEvento], map: "idx_evento_tipo")
  @@index([fechaEvento], map: "idx_evento_fecha")
  @@index([estado], map: "idx_evento_estado")
  @@index([importancia], map: "idx_evento_importancia")
}

// ==========================================
// SISTEMA DE GRUPOS: DEPARTAMENTOS Y UNIDADES
// ==========================================

// Departamento - Grupo principal (ej: "HIS", "Infraestructura", "Desarrollo")
model Departamento {
  id          String    @id @default(cuid()) @db.NVarChar(100)
  nombre      String    @unique @db.NVarChar(255)
  descripcion String?   @db.NVarChar(500)
  codigo      String?   @unique @db.NVarChar(50) // Código corto, ej: "HIS", "INF"
  color       String?   @db.NVarChar(20) // Color para identificación visual
  activo      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relaciones
  unidades        Unidad[]
  usuarios        UsuarioDepartamento[]
  licitaciones    Licitacion[]          @relation("LicitacionDepartamento")
  tickets         Ticket[]              @relation("TicketDepartamento")

  @@map("departamentos")
  @@index([activo], map: "idx_departamento_activo")
}

// Unidad - Subgrupo dentro de un Departamento (ej: "Interoperabilidad", "Soporte")
model Unidad {
  id              String    @id @default(cuid()) @db.NVarChar(100)
  nombre          String    @db.NVarChar(255)
  descripcion     String?   @db.NVarChar(500)
  codigo          String?   @db.NVarChar(50) // Código corto
  departamentoId  String    @map("departamento_id") @db.NVarChar(100)
  activo          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relaciones
  departamento    Departamento          @relation(fields: [departamentoId], references: [id], onDelete: Cascade)
  usuarios        UsuarioUnidad[]
  licitaciones    Licitacion[]          @relation("LicitacionUnidad")
  tickets         Ticket[]              @relation("TicketUnidad")

  @@unique([departamentoId, nombre])
  @@map("unidades")
  @@index([departamentoId], map: "idx_unidad_departamento")
  @@index([activo], map: "idx_unidad_activo")
}

// Membresía de Usuario a Departamento
model UsuarioDepartamento {
  id              String    @id @default(cuid()) @db.NVarChar(100)
  userId          String    @map("user_id") @db.NVarChar(100)
  departamentoId  String    @map("departamento_id") @db.NVarChar(100)
  rol             String    @default("MIEMBRO") @db.NVarChar(50) // ADMIN, SUPERVISOR, MIEMBRO
  activo          Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relaciones
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  departamento    Departamento  @relation(fields: [departamentoId], references: [id], onDelete: Cascade)

  @@unique([userId, departamentoId])
  @@map("usuarios_departamentos")
  @@index([userId], map: "idx_usuario_depto_user")
  @@index([departamentoId], map: "idx_usuario_depto_depto")
}

// Membresía de Usuario a Unidad
model UsuarioUnidad {
  id        String    @id @default(cuid()) @db.NVarChar(100)
  userId    String    @map("user_id") @db.NVarChar(100)
  unidadId  String    @map("unidad_id") @db.NVarChar(100)
  rol       String    @default("MIEMBRO") @db.NVarChar(50) // ADMIN, SUPERVISOR, MIEMBRO
  activo    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relaciones
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  unidad    Unidad    @relation(fields: [unidadId], references: [id], onDelete: Cascade)

  @@unique([userId, unidadId])
  @@map("usuarios_unidades")
  @@index([userId], map: "idx_usuario_unidad_user")
  @@index([unidadId], map: "idx_usuario_unidad_unidad")
}
